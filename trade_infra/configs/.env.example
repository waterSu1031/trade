# Trade System Environment Variables
# Copy this file to .env and configure with your values

# Database Configuration
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trade_db
DB_USER=freeksj

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# IBKR Configuration
IB_HOST=host.docker.internal
IB_PORT=4001
IB_LIVE_PORT=4002
IB_CLIENT_ID=1

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# Monitoring Configuration (Removed - not needed for personal use)

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/app/volumes/backups

# Docker Configuration
COMPOSE_PROJECT_NAME=trade
DOCKER_REGISTRY=

# Resource Limits
ES_JAVA_OPTS=-Xms512m -Xmx512m

# ML Serving Configuration (TorchServe)
ML_MODEL_NAME=patch_tst_trade
ML_MODEL_STORE=/home/model-server/model-store
ML_INFERENCE_PORT=8080
ML_MANAGEMENT_PORT=8081
ML_METRICS_PORT=8082
ML_NUM_WORKERS=2
ML_BATCH_SIZE=8
ML_MAX_BATCH_DELAY=100
# GPU settings (uncomment if using GPU)
# ML_USE_GPU=true
# ML_GPU_ID=0