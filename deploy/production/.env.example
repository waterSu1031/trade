# Trade System Production Environment Variables
# Copy this file to .env and fill in the values

# Docker Registry
REGISTRY_URL=localhost:5000
REGISTRY_USER=admin
REGISTRY_PASSWORD=your_registry_password
IMAGE_TAG=latest

# Database
DB_HOST=db
DB_PORT=5432
DB_NAME=trade_db
DB_USER=freeksj
DB_PASSWORD=your_db_password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# IBKR Connection
IBKR_HOST=host.docker.internal
IBKR_PORT=4002
IBKR_USERNAME=
IBKR_PASSWORD=

# Client IDs for each service
IBKR_CLIENT_ID_BATCH=1
IBKR_CLIENT_ID_DASHBOARD=2
IBKR_CLIENT_ID_ENGINE=3

# VectorBT Pro
VECTORBT_TOKEN=your_vectorbt_token

# Application Settings
SPRING_PROFILES_ACTIVE=production
LOG_LEVEL=INFO
TZ=Asia/Seoul

# Frontend
VITE_API_URL=http://your-domain.com:8000
VITE_WS_URL=ws://your-domain.com:8000