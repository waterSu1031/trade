# Trade System Environment Variables Template
# Copy this file to .env and update with your values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trade_db
DB_USER=trade_user
DB_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Interactive Brokers Configuration
IB_HOST=localhost
IB_PORT=4002  # 4002 for paper trading, 4001 for live
IB_CLIENT_ID_DASHBOARD=10    # trade_dashboard client ID
IB_CLIENT_ID_ENGINE=20       # trade_engine client ID
IB_CLIENT_ID_BATCH=30        # trade_batch client ID
IB_USERNAME=your_ib_username
IB_PASSWORD=your_ib_password

# API Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Frontend Environment Variables
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# Environment Settings
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# Docker Settings
COMPOSE_PROJECT_NAME=trade

# ML Service (Optional)
ML_ENABLED=false
ML_INFERENCE_PORT=8080
ML_MANAGEMENT_PORT=8081
ML_METRICS_PORT=8082

# Monitoring (Optional)
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false
GRAFANA_ADMIN_PASSWORD=admin

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Backup Settings
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7